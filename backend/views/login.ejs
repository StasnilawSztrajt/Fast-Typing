<head>
    <link rel="stylesheet" href="/css/styleLogin.min.css">
</head>
<body>
    <div class="container">
        <div class="login">
            <h1><i class="fas fa-sign-in-alt"></i>  Login
            <p>Fast Typing</p>
            </h1>

            <%- include('./partials/messages') %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                <label for="name">Name</label>
                <br>
                <input
                    type="name"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder="Enter name"
                />
                </div>
                <div class="form-group">
                <label for="password">Password</label>
                <br>
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Enter Password"
                />
                </div>
                <button type="submit" class="btn">Login</button>
            </form>
            <p class="lead">
                No Account? <a href="/users/register" class="router">Register</a>
            </p>
            <p><a href="https://fast--typing.herokuapp.com/" class="router">Go back to the main page</a></p>
            </div>
        </div>
</body>
