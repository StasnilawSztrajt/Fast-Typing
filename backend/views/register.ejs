<head>
    <link href="/css/styleRegister.min.css" rel="stylesheet" type="text/css" >
</head>
<body>



      <div class="container">
          <div class="register">
          <h1>
              <i class="fas fa-user-plus"></i>Register
              <p>FastTyping</p>
          </h1>
          <%- include('./partials/messages') %>
          <form action="/users/register" method="post">
              <div class="form-group">
                  <label for="name" class="name">Name</label>
                  <br>
                  <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : ''%>">
              </div>

              <div class="form-group">
                  <label for="email">Email</label>
                  <br>
                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : ''%>">
              </div>

              <div class="form-group">
                  <label for="password">Password</label>
                  <br>
                  <input type="password" id="password" name="password" class="form-control"
                         placeholder="Create Password" value="<%= typeof password  != 'undefined' ? password : ''%>">
              </div>
              <div class="form-group">
                  <label for="password2">Password</label>
                  <br>
                  <input type="password" id="password2" name="password2" class="form-control"
                         placeholder="Create Password" value="<%= typeof password2  != 'undefined' ? password2 : ''%>">
              </div>
              <button type="submit" class="btn">Register</button>
          </form>
          <p class="lead">Have an Account? <a href="/users/login" class="router">Login</a></p>
          <p><a href="https://fast--typing.herokuapp.com/" class="router">Go back to the main page</a></p>
      </div>
    </div>
    </div>
</body>